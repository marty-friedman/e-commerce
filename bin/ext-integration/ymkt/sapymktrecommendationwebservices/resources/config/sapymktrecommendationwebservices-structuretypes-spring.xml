			</set>
		</property>
	</bean>

	<bean class="de.hybris.platform.cmsfacades.types.service.impl.DefaultComponentTypeAttributeStructure" p:typecode="CMSSAPRecommendationComponent" p:qualifier="leadingitemdstype">
