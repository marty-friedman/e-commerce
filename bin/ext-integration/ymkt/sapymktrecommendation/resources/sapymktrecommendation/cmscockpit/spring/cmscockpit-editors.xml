<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
	default-autowire="byName">

	<alias alias="LookupEditorFactory" name="sapYmktRecommendationLookupEditorFactory" />
    <bean id="sapYmktRecommendationLookupEditorFactory" class="de.hybris.platform.cockpit.model.meta.LookupEditorFactory"  init-method="init" lazy-init="false">
   		<property name="editorFactory" ref="EditorFactory"></property>
	</bean>
	
    <bean class="de.hybris.platform.cockpit.model.meta.DefaultPropertyEditorDescriptor">
    		<property name="editorType" value="TEXT" />
    		<property name="defaultEditor" value="de.hybris.platform.cockpit.model.editor.impl.DefaultTextUIEditor" />
    		<property name="label" value="textEditor"/>
    		<property name="editors">
			<map merge="true">
				<!-- Custom Editors Prod Reco -->
				<entry key="recotype" value="com.hybris.ymkt.recommendation.cockpit.editor.DefaultSAPRecommendationTypeUIEditor" />
				<entry key="itemDStype" value="com.hybris.ymkt.recommendation.cockpit.editor.DefaultSAPRecommendationItemDSUIEditor" />
				<entry key="itemstype" value="com.hybris.ymkt.recommendation.cockpit.editor.DefaultItemTypeUIEditor" />
				<!-- Custom Editors Offer Reco -->
				<entry key="offerEditor" value="com.hybris.ymkt.recommendation.cockpit.editor.DefaultOfferRecoUIEditor" />
			</map>
		</property>
    </bean>
    
</beans>