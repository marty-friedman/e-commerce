<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd">

    <import resource="classpath:/sapcpiorderexchange-scpi-spring.xml"/>

    <!-- Order and Order Cancellation Conversion Service-->
    <alias name="sapCpiOmmOrderConversionService" alias="sapCpiOrderConversionService"/>
    <bean id="sapCpiOmmOrderConversionService" class="de.hybris.platform.sap.sapcpiorderexchange.service.impl.SapCpiOmmOrderConversionService">
        <property name="sapOrderContributor" ref="sapOrderContributor"/>
        <property name="sapOrderEntryContributor" ref="sapOrderEntryContributor"/>
        <property name="sapPaymentContributor" ref="sapPaymentContributor"/>
        <property name="sapPartnerContributor" ref="sapPartnerContributor"/>
        <property name="sapSalesConditionsContributor" ref="sapSalesConditionsContributor"/>
        <property name="sapOrderCancelRequestContributor" ref="sapOrderCancelRequestContributor"/>
        <property name="sapCoreSAPGlobalConfigurationDAO" ref="sapCoreSAPGlobalConfigurationDAO"/>
    </bean>

    <!-- Send Order Action-->
    <alias name="sapCpiSendOmmOrderToScpiAction" alias="sapSendOrderAction"/>
    <bean id="sapCpiSendOmmOrderToScpiAction" parent="sapOrderexchangeDefaultSendOrderToDataHubAction"
          class="de.hybris.platform.sap.sapcpiorderexchange.actions.SapCpiSendOmmOrderToScpiAction">
        <property name="sapCpiOrderService" ref="sapCpiOrderService"/>
        <property name="sapCpiOrderConversionService" ref="sapCpiOrderConversionService"/>
    </bean>

    <!-- Send Order Cancellation Action -->
    <alias name="sapCpiSendOmmOrderCancellationToScpiAction" alias="sapSendOrderCancelRequestAsCSVTaskRunner"/>
    <bean id="sapCpiSendOmmOrderCancellationToScpiAction" parent="defaultSapSendOrderCancelRequestAsCSVTaskRunner"
          class="de.hybris.platform.sap.sapcpiorderexchange.actions.SapCpiSendOmmOrderCancellationToScpiAction">
        <property name="sapCpiOrderService" ref="sapCpiOrderService"/>
        <property name="sapCpiOrderConversionService" ref="sapCpiOrderConversionService"/>
    </bean>

    <!-- Default Generated Beans -->
    <bean id="sapcpiorderexchangeSystemSetup"
          class="de.hybris.platform.sap.sapcpiorderexchange.setup.SapcpiorderexchangeSystemSetup">
        <constructor-arg ref="sapcpiorderexchangeService"/>
    </bean>

    <bean id="sapcpiorderexchangeService"
          class="de.hybris.platform.sap.sapcpiorderexchange.service.impl.DefaultSapcpiorderexchangeService">
        <property name="modelService" ref="modelService"/>
        <property name="mediaService" ref="mediaService"/>
        <property name="flexibleSearchService" ref="flexibleSearchService"/>
    </bean>

</beans>
