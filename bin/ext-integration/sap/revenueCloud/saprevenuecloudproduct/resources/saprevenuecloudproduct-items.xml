<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xsi:noNamespaceSchemaLocation="items.xsd">
			
			
	 <enumtypes>
        <enumtype code="TermOfServiceFrequency" autocreate="false" generate="false" dynamic="false">
            <value code="half_yearly"/>
        </enumtype>
    </enumtypes>
			
	<relations>
		<relation autocreate="true" code="SAPRevenueCloudConfiguration2SAPMarketToCatalogMapping" generate="true" localized="false">
			<sourceElement cardinality="one" qualifier="revenueCloudConfig" type="SAPRevenueCloudConfiguration"/>
			<targetElement cardinality="many" qualifier="marketToCatalogMappings" type="SAPMarketToCatalogMapping"/>
		</relation>
	</relations>

	<itemtypes>
	
	<itemtype code="SAPRevenueCloudConfiguration" generate="true" autocreate="true"
				  jaloclass="com.sap.hybris.saprevenuecloudproduct.jalo.SAPRevenueCloudConfiguration">
			<deployment table="SAPReveuneCloudConfig" typecode="9340" />
			<attributes>
				<attribute qualifier="name" type="java.lang.String">
					<description>Sap Revenue Cloud configuration name</description>
					<modifiers read="true" write="true" search="true"
                               optional="true"/>
					<persistence type="property" />
				</attribute>
				<attribute qualifier="replicateCustomer" type="java.lang.Boolean">
					<description>Indicate if the B2C customer has to be replicated to SAP Revenue Cloud</description>
					<modifiers read="true" write="true" search="true"
                               optional="true"/>
					<persistence type="property" />
				</attribute>
			</attributes>
		</itemtype>
	
	
		<itemtype code="SAPMarketToCatalogMapping" extends="GenericItem"
			autocreate="true" generate="true"
			jaloclass="com.sap.hybris.saprevenuecloudproduct.jalo.SAPMarketToCatalogMapping">
			<deployment table="SAPMarket2Catalog" typecode="9339" />
			<attributes>
				<attribute type="java.lang.String" qualifier="marketId">
					<modifiers unique="false" search="true" optional="false" />
					<persistence type="property" />
					<description>Market Id maintained at Revenue Cloud</description>
				</attribute>
				<attribute type="Catalog" qualifier="catalog">
					<modifiers unique="false" search="true" optional="false" />
					<persistence type="property" />
					<description>Catalog in SAP Hybris commerce</description>
				</attribute>
			</attributes>
		</itemtype>
		
		 <itemtype code="SubscriptionPricePlan"  autocreate="false"
            generate="false" >            
            <attributes>
              	 <attribute type="java.lang.String" qualifier="pricePlanId">
                    <description>Rate plan ID from Revenue Cloud</description>
                    <modifiers read="true" write="true" search="true"
                               optional="true"/>
                    <persistence type="property"/>
                </attribute>
            </attributes>
        </itemtype>
        
        <!-- Enhance product with subscription code -->
        <itemtype code="Product" autocreate="false" generate="false">
            <attributes>
                <attribute type="java.lang.String" qualifier="subscriptionCode">
                    <description>Subscription Code</description>
                    <modifiers read="true" write="true" search="true"
                               optional="true"/>
                    <persistence type="property"/>
                </attribute>
            </attributes>
        </itemtype>
        
	</itemtypes>
</items>
