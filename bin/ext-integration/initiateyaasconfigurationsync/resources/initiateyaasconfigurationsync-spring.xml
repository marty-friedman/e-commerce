<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		   http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="initiateyaasconfigurationsyncSystemSetup" class="de.hybris.platform.initiateyaasconfigurationsync.setup.InitiateyaasconfigurationsyncSystemSetup">
		<!-- constructor arg injection example -->
		<constructor-arg ref="initiateyaasconfigurationsyncService"/>
	</bean>

	<bean id="initiateyaasconfigurationsyncService" class="de.hybris.platform.initiateyaasconfigurationsync.service.impl.DefaultInitiateyaasconfigurationsyncService">
		<!-- setter injection example -->
		<property name="modelService" ref="modelService"/>
		<property name="mediaService" ref="mediaService"/>
		<property name="flexibleSearchService" ref="flexibleSearchService"/>
	</bean>

	<alias name="initiateYaasConfigurationY2ySyncExecutionService" alias="syncExecutionService"/>
	<bean id="initiateYaasConfigurationY2ySyncExecutionService" parent="defaultSyncExecutionService"
		  class="de.hybris.platform.initiateyaasconfigurationsync.service.impl.InitiateYaasConfigurationY2ySyncExecutionService">
		<property name="changeDetectionService" ref="changeDetectionService"/>
	</bean>

	 <alias name="defaultConfigurationSyncServicee" alias="configurationSyncService"/>
	<bean id="defaultConfigurationSyncServicee" class="de.hybris.platform.initiateyaasconfigurationsync.service.impl.DefaultYaasConfigurationSyncService">
		<property name="jobDao" ref="jobDao"/>
		<property name="y2ySyncYaasConfigurationsJobCode" value="${yaas.configuration.job.code}"/>
		<property name="syncExecutionService" ref="syncExecutionService"/>
	</bean>

</beans>
