<widget-definition id="com.hybris.instore.widgets.textsearch"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd">

	<name>Text Search</name>
	<description>Text search widget</description>
	<controller
		class="com.hybris.instore.widgets.textsearch.TextSearchController" />
	<defaultTitle>Search</defaultTitle>
	<author>hybris</author>
	<version>0.1</version>
	<view src="textsearch.zul" />
	<keywords>
		<keyword>Search</keyword>
	</keywords>

	<sockets>
		<input id="searchText" type="java.lang.String" />
		<output id="queryString" type="java.lang.String" />
	</sockets>
	<settings>
		<setting key="maxlength" default-value="500" />
	</settings>
</widget-definition>
