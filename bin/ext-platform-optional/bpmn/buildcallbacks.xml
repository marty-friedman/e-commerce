<!--
 All hybris buildcallbacks.xml macrodefinitions:
 
 Build/Documentation
 
	 before/after ant macro "clean"
		 <macrodef name="bpmn_before_clean"/>
		 <macrodef name="bpmn_after_clean"/>
	 
	 before/after ant macro "build"
		 <macrodef name="bpmn_before_build"/>
		 <macrodef name="bpmn_after_build"/>
		 
	 before/after ant macro "compile_core" - the core module of the extension
		 <macrodef name="bpmn_before_compile_core">
		 <macrodef name="bpmn_after_compile_core">
	 
	 before/after ant macro "compile_web" - the web module of the extension
		 <macrodef name="bpmn_before_compile_web" />
		 <macrodef name="bpmn_after_compile_web" />
	 
	 before/after ant macro "compile_hmc" - the hmc module of the extension
		 <macrodef name="bpmn_before_compile_hmc" />
		 <macrodef name="bpmn_after_compile_hmc" />
 
 Preparing extension
 
	 will be called in the beginning of the ant call and only once (also when using multiple 
	 ant targets e.g. ant build yunittest)	
		 <macrodef name="bpmn_only_once_prepare"/>
 
 Creating ear module/production
 
	 before/after ant macro "ear"
		 <macrodef name="bpmn_before_ear"/>
		 <macrodef name="bpmn_after_ear"/>

	 before/after ant macro "production" - for hybris server only
		 <macrodef name="bpmn_before_production" />
		 <macrodef name="bpmn_after_production" />
 
 JUnit Test
 
	 before/after ant macro "yunitinit" 
		 <macrodef name="bpmn_before_yunitinit" />
		 <macrodef name="bpmn_after_yunitinit" />
	 
	 before/after ant macro "yunit"
		 <macrodef name="bpmn_before_yunit" />
		 <macrodef name="bpmn_after_yunit" /> 
		 
 Distribution package
 
 	 before/after ant macro "dist" - internal target; only for use when platform is available in source code
		 <macrodef name="bpmn_after_dist"/>
		 <macrodef name="bpmn_before_dist"/>
	 
	 before/after ant macro "dist_copy" - internal target; only for use when platform is available in source code
		 <macrodef name="bpmn_before_dist_copy"/>
		 <macrodef name="bpmn_after_dist_copy"/>
		  
 	 With these filters you can override the default extension filters defined in platform/resources/ant/dist/filtersets.xml
 	  	 <patternset id="extension.bpmn.binary.filter">
 	  	  	 <patternset refid="extension.filter" />
 	  	  	 <exclude name="**/*-source.jar" />
 	  	 </patternset>
 	  	 <patternset id="extension.bpmn.source.filter">
 	  	  	 <exclude name="**/bin/**" />
 	  	 </patternset>
     With this filter you can decide what should be excluded from development zip.
 	  	 <patternset id="extension.bpmn.devzip.filter">
 	  	 Include all files from extension.source.filter.
 	  	     <patternset refid="extension.source.filter" />
         Exclude unwanted files.
 	  	  	 <exclude name="lib/exclude-me.jar" />
 	  	 </patternset>
 
--><project name="bpmn_buildcallbacks">

    <macrodef name="bpmn_before_build">
        <sequential>

            <taskdef name="xjc" classname="com.sun.tools.xjc.XJCTask">
                <classpath>
                    <fileset dir="${platformhome}/resources/ant/lib">
                        <include name="*.jar"/>
                    </fileset>
                </classpath>
            </taskdef>

            <fileset dir="${ext.bpmn.path}/resources" id="bpmnSchema">
                <filename name="bpmn/*.xsd"/>
            </fileset>
            
            <pathconvert refid="bpmnSchema" property="fileset.notempty" setonempty="false"/>

            <outofdate>
                <sourcefiles >
                    <fileset refid="bpmnSchema"/>
                </sourcefiles>
                <targetfiles path="${ext.bpmn.path}/gensrc/www/omg" />
                <sequential>
                    <echo>generating JAXB classes</echo>
                    <mkdir dir="${ext.bpmn.path}/gensrc"/>
                    <if>
                        <isset property="fileset.notempty"/>
                        <then>
                            <xjc    package="www.omg.org.spec.bpmn.model"
                                    destdir="${ext.bpmn.path}/gensrc">
                                <arg value="-npa"/>
                             <produces dir="${ext.bpmn.path}/gensrc/www/omg/org/spec/bpmn/model">
                                    <include name="*.java"/>
                                </produces>
                                <schema refid="bpmnSchema"/>
                            </xjc>
                        </then>
                    </if>
                </sequential>
            </outofdate>
        </sequential>
    </macrodef>

	<!-- 
	    Called whenever 'ant ear' is used. this callback can be used to modify the content of the ear file
	
	     ${ear.path}: 			path to ear
	 -->
	<macrodef name="bpmn_before_ear">
		<sequential>

			<!-- you can do anything before the EAR file is being packed -->

		</sequential>
	</macrodef>
        <patternset id="extension.bpmn.binary.filter">
            <patternset refid="extension.binary.filter"/>
            <exclude name="resources/bpmn/*.xsd" />
            <exclude name="hac/classes/**"/>
        </patternset>

</project>
