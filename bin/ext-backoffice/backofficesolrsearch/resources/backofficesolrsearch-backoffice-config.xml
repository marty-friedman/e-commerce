<config xmlns="http://www.hybris.com/cockpit/config">

    <context merge-by="type" parent="GenericItem" type="SolrIndexedProperty" component="editor-area">
        <editorArea:editorArea  xmlns:editorArea="http://www.hybris.com/cockpitng/component/editorArea">
            <editorArea:tab name="hmc.tab.configuration.indexedproperty.facet" position="3">
                <editorArea:section name="hmc.sec.configuration.indexedproperty.facet">
                    <editorArea:attribute qualifier="backofficeDisplayName"/>
                </editorArea:section>
            </editorArea:tab>
        </editorArea:editorArea>
    </context>

    <context component="explorer-tree" merge-by="module">
        <explorer-tree:explorer-tree xmlns:explorer-tree="http://www.hybris.com/cockpitng/config/explorertree">
            <explorer-tree:navigation-node id="hmc_treenode_system">
                <explorer-tree:navigation-node id="hmc.solrfacetsearch">
                    <explorer-tree:navigation-node id="hmc_treenode_solr_backoffice">
                        <explorer-tree:type-node code="BackofficeIndexedTypeToSolrFacetSearchConfig"
                                                 id="hmc_typenode_BackofficeIndexedTypeToSolrFacetSearchConfig"/>
                    </explorer-tree:navigation-node>
                </explorer-tree:navigation-node>
            </explorer-tree:navigation-node>
        </explorer-tree:explorer-tree>
    </context>

    <context merge-by="source" component="notification-area" module="backofficesolrsearch" source="emptySearchNotification" principal="backofficeadministratorrole">
        <na:notification-area xmlns:na="http://www.hybris.com/cockpitng/config/notifications">
            <na:notifications eventType="General" level="WARNING">
                <na:message>general.emptysearch.init.warning</na:message>
                <na:references linksEnabled="true">
                    <na:reference label="T(org.zkoss.util.resource.Labels).getLabel('general.here')" link="true" message="#root" placeholder="0">
                        <na:context parameter="emptySearch" value="true"/>
                        <na:context parameter="TYPE_CODE" value="SolrIndexerOperationWizard"/>
                        <na:context parameter="facetSearchConfig" evaluate="true" value="@backofficeFacetSearchConfigService.getSolrFacetSearchConfigModel(#root.getReferencedObjects()[0])"/>
                    </na:reference>
                </na:references>
            </na:notifications>
        </na:notification-area>
    </context>

    <context merge-by="source" component="notification-area" module="backofficesolrsearch" source="emptySearchNotification" >
        <na:notification-area xmlns:na="http://www.hybris.com/cockpitng/config/notifications">
            <na:notifications eventType="General" level="WARNING">
                <na:message>general.emptysearch.warning</na:message>
            </na:notifications>
        </na:notification-area>
    </context>

</config>
